<p id="notice"><%= notice %></p>
<%= link_to 'main page', applies_path %>
<table class='table table-sm table-responsive-sm' style="width: 100% !important;">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Student name</th>
      <th scope="col">Birth date</th>
      <th scope="col">Parent name</th>
      <th scope="col">Occupation</th>
      <th scope="col">Phone number</th>
      <th scope="col">Relative relation</th>
      <th scope="col">Address</th>
      <th scope="col">Med description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applies.each do |apply| %>
      <tr>
        <th scope="row"></th>
        <td><%= apply.student_first_name %> <%= apply.student_last_name %></td>
        <td><%= apply.birth_date %></td>
        <td><%= apply.parent_first_name %> <%= apply.parent_last_name %></td>
        <td><%= apply.occupation %></td>
        <td><%= apply.phone_number %></td>
        <td><%= apply.relative_relation %></td>
        <td><%= apply.address %></td>
        <td class="med"><%= apply.med_description %></td>
        <td><button type="button" class="btn btn-primary"> <%= link_to 'Show', apply, {:style=>'color:#FFFFFF;'} %> </button> </td>
        <td><button type="button" class="btn btn-primary"> <%= link_to 'Edit', edit_apply_path(apply), {:style=>'color:#FFFFFF;'} %> </button></td>
        <td><button type="button" class="btn btn-primary"> <%= link_to 'Destroy', apply,  method: :delete, data: { confirm: 'Are you sure?'},style: 'color:#FFFFFF;' %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
